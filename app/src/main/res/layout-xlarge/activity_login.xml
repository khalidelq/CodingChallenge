<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/identifiezvous"
            android:textColor="@color/white"
            android:textSize="15pt"
            android:layout_below="@id/cn"
            android:paddingTop="5dp"
            app:layout_marginLeftPercent="10%"
            app:layout_marginRightPercent="10%"
            android:id="@+id/titre"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connexion"
            android:textColor="@color/white"
            android:textSize="30pt"
            app:layout_marginTopPercent="7%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginRightPercent="10%"
            android:id="@+id/cn"
            />
    </android.support.percent.PercentRelativeLayout>

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        >-->
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:background="@drawable/trans_white_rec"
                app:layout_widthPercent="80%"
                app:layout_heightPercent="49%"
                app:layout_marginTopPercent="22%"
                app:layout_marginLeftPercent="10%"
                app:layout_marginRightPercent="10%"
                />
            <AutoCompleteTextView
                app:layout_widthPercent="70%"
                app:layout_heightPercent="10%"
                android:hint="@string/userEmail"
                app:layout_marginLeftPercent="18%"
                app:layout_marginTopPercent="23%"
                app:layout_marginRightPercent="18%"
                android:textSize="15pt"
                android:textColorHint="@color/text"
                android:id="@+id/userEmail"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:theme="@style/Autocomplete"
                />
            <ImageButton
                android:background="@drawable/ic_user_icon"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:layout_marginTopPercent="26.5%"
                app:layout_marginLeftPercent="79%"
                app:layout_marginRightPercent="79%"
                android:id="@+id/emailicon" />
            <AutoCompleteTextView
                app:layout_widthPercent="70%"
                app:layout_heightPercent="10%"
                android:hint="@string/userPassword"
                app:layout_marginLeftPercent="18%"
                android:textSize="15pt"
                android:textColorHint="@color/text"
                app:layout_marginRightPercent="18%"
                android:id="@+id/userPassword"
                android:layout_below="@id/userEmail"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:theme="@style/Autocomplete"
                />
            <ImageButton
                android:background="@drawable/ic_pass_icon"
                android:layout_width="30dp"
                android:layout_height="25dp"
                app:layout_marginTopPercent="4%"
                app:layout_marginLeftPercent="78%"
                app:layout_marginRightPercent="78%"
                android:layout_below="@id/userEmail"
                android:id="@+id/passhide" />

            <CheckBox android:id="@+id/checkbox_meat"
                app:layout_widthPercent="70%"
                app:layout_heightPercent="10%"
                app:layout_marginLeftPercent="18%"
                app:layout_marginTopPercent="3.75%"
                app:layout_marginRightPercent="18%"
                android:layout_below="@id/userPassword"
                android:onClick="onCheckboxClicked"
                android:button="@drawable/checkbox_background"/>
            <TextView
                app:layout_widthPercent="70%"
                app:layout_heightPercent="6%"
                android:text="@string/ResterConnecte"
                android:textSize="8pt"
                app:layout_marginLeftPercent="23%"
                app:layout_marginRightPercent="23%"
                android:layout_below="@+id/userPassword"
                app:layout_marginTopPercent="8%"
                android:textColor="@color/bluue"
                android:id="@+id/rc"
                />
<!--            <TextView
                app:layout_widthPercent="70%"
                app:layout_heightPercent="6%"
                android:hint="@string/tc"
                android:textSize="12sp"
                app:layout_marginLeftPercent="34%"
                android:layout_below="@+id/checkbox_meat"
                android:textColor="@color/Blue"
                android:id="@+id/Forgetpsd"
                />-->
            <TextView
                android:id="@+id/Forgetpsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Forgetpsd"
                app:layout_marginTopPercent="4%"
                android:textColor="@color/text"
                android:button="@drawable/radio_button"
                android:layout_below="@id/checkbox_meat"
                android:layout_centerHorizontal="true"
                android:textSize="8pt" />

            <Button
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:text="@string/loginBtn"
                android:textSize="8pt"
                android:background="@drawable/btn_blue"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Forgetpsd"
                app:layout_marginTopPercent="3%"
                android:id="@+id/loginBtn"
                />
        </android.support.percent.PercentRelativeLayout>
<!--
    </ScrollView>
-->

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="79%"
            android:layout_centerHorizontal="true"
            android:text="@string/Inscription"
            android:textColor="@color/text"
            android:id="@+id/jai"
            android:textSize="8pt"
            />

        <Button
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:textColor="@color/Blue"
            android:text="@string/Enregister"
            app:layout_marginTopPercent="5%"
            android:layout_centerHorizontal="true"
            android:textSize="8pt"
            android:layout_below="@id/jai"
            android:background="@drawable/btn_white"
            android:id="@+id/Inscription"
            />
    </android.support.percent.PercentRelativeLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</android.support.v4.widget.DrawerLayout>
